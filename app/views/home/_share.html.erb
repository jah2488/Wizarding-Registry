<div id="share">
  
  <h2>Spread The Word</h2>
  
  <hr>

  <div id="facebook">
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#appId=268713063150612&xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div class="fb-like" data-send="false" data-layout="box_count" data-width="50" data-show-faces="false"></div>
  </div>

  <div id="twitter">
    <a href="https://twitter.com/share" class="twitter-share-button" data-text="Looking for someone on pottermore? Find them on Wizarding Registry!" data-count="vertical" data-via="WizardRegistry" data-related="JAH2488">Tweet!</a><script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
  </div>

  <div class="clearfix"></div>

  <div id="tumblr">
    <a href="http://www.tumblr.com/share/link?url=<%=u current_url %>&name=Wizarding Registry | <%=u @title.to_s %>&description=<%=u @user.bio if @user %>" title="Share on Tumblr" style="display:inline-block; text-indent:-9999px; overflow:hidden; width:129px; height:20px; background:url('http://platform.tumblr.com/v1/share_3.png') top left no-repeat transparent;">Share on Tumblr</a>
  </div>

  <div id="google-plus">
    <!-- Place this tag where you want the +1 button to render -->
    <div class="g-plusone" data-href="<%= current_url %>"></div>

    <!-- Place this render call where appropriate -->
    <script type="text/javascript">
      (function() {
        var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
        po.src = 'https://apis.google.com/js/plusone.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
      })();
    </script>
  </div>

</div>
<p id="notice"><%= notice %></p>
<div id="profile">
	
	<div id="account">
		<%= @user.name %>
		<%= @user.house %>
		<%= @user.house_points %>
		<%= @user.pet %>
		<hr><h2>Wand</h2></hr>
		<%=  @user.wand_tree.to_s + " with " + @user.wand_core.to_s + ", " + pluralize(@user.wand_length, "Inches") + " Long, and " + @user.wand_spec.to_s %>
	</div>

	<div id="social">
		<%= link_to @user.twitter %>
		<%= link_to @user.tumblr  %>
		<%= link_to @user.site    %>
	</div>
</div>
<% if current_user %>
  <%= link_to 'Edit', edit_user_path(@user) if current_user.id == @user.id %> |
<% end %>
<%= link_to 'Back', users_path %>

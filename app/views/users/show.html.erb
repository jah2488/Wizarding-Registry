<% present @user do |user_presenter| %>
<%= link_to "Edit Profile", edit_user_path(@user), :class => "big button edit", :style => "float:right;" if has_permission? %>
<div class="clearfix"></div>

<div id="profile">
	
	<div id="account">
		<div id="house" class=<%= @user.house.to_s %> >
			<span style="display:none;"><%= @user.house.to_s %></span>
		</div>
		<div id="name">			
			<p><%= @user.name %></p>
		</div>
		<div id="house-points">
			<%= @user.house_points %>
		</div>
		<div class="clearfix"></div>
		<div id="icon">
			<%= @user.pet %>
		</div>
	</div>
	<div class="clearfix"></div>

	<div id="social">
	    <h2>Muggle Contact Links</h2>
	    <div id="links">
		    <ul>
				<li><%= link_to "" , "http://twitter.com/#{@user.twitter.to_s}"           , id: "twitter"  %></li>
				<li><%= link_to "" , "http://#{@user.tumblr.to_s}.tumblr.com"             , id: "tumblr"   %></li>
				<li><%= link_to "" , "http://facebook.com/#{@user.facebook.to_s}"         , id: "facebook" %></li>
			</ul>
			<div class="clearfix"></div>
			<ul>
				<li><%=	link_to "" , "aim:goim?screenname=#{@user.aim.to_s}"              , id: "aim"      %></li>
				<li><%= link_to "" , "skype:#{@user.skype.to_s}?chat"                     , id: "skype"    %></li>
		    	<li><%= link_to "" , "https://plus.google.com/#{@user.google_plus}/posts" , id: "google"   %></li>
		    	<!-- <li><%= link_to "" , "http://youtube.com/#{@user.youtube.to_s}"      , id: "youtube"  %></li> -->
		    </ul>
		    <div class="clearfix"></div>
			<ul>	
		    	<li><%= link_to "" , "mailto:#{@user.email}" , id: "email", confirm: "Just to let you know. We cannot guarantee a death eater did not curse this link with computer viruses or Pr0n. Are you sure you trust this wizard?"    %></li>
		    	<li><%= link_to "" , "#{@user.site}" , id: "site", confirm: "Just to let you know. We cannot guarantee a death eater did not curse this link with computer viruses or Pr0n. Are you sure you trust this wizard?"     %></li>
		    	<li><%= link_to "" , "#{@user.site2}" , id: "site", confirm: "Just to let you know. We cannot guarantee a death eater did not curse this link with computer viruses or Pr0n. Are you sure you trust this wizard?"     %></li>
		    </ul>
		    <div class="clearfix"></div>
	    </div>
	</div>

	<div id="wand">
		<h2>Wand</h2>
		<hr>
		<%=  @user.wand_tree.to_s %>
		<p> with </p>
		<%=  @user.wand_core.to_s %>
		<%= pluralize(@user.wand_length, "Inches") + " Long," %> 
		<p> and </p> 
		<%= @user.wand_spec.to_s %>

		<%= render :partial => "home/share" %>

	</div>
	<div class="clearfix"></div>



</div>
<%= link_to 'Back', users_path, :class => "button" %>
<% end %>